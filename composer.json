{
    "name": "simplicms/cms",
    "description": "SimpliCMS Laravel based CMS",
    "keywords": ["cms", "laravel", "ecommerce"],
    "license": "MIT",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "ext-gd": "*",
        "fruitcake/laravel-cors": "^2.2",
        "guzzlehttp/guzzle": "^7.4",
        "laravel/framework": "^9.52",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.7",
        "laravel/ui": "^3.4",
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.6.7",
        "spatie/laravel-ignition": "^1.2.3",
        "fakerphp/faker": "^1.19",
        "laravel/dusk": "^6.0",
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "^9.5.20"
    },
    "autoload": {
        "classmap": [
            "app/database/seeds",
            "modules/*/resources/database/seeds",
            "app/database/factories",
            "modules/*/resources/database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "Modules\\": "modules/",
            "Plugins\\": "plugins/"
        },
        "files": [
            "modules/Core/Helpers/Helper.php",
            "modules/Core/Helpers/helper_.php" 
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        },
        "merge-plugin": {
            "include": [
                "modules/*/composer.json",
                "plugins/*/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "ignore-duplicates": false,
            "merge-dev": true,
            "merge-extra": false,
            "merge-extra-deep": false,
            "merge-replace": true,
            "merge-scripts": false
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true
        }
    }
}
